<Window x:Class="Vistas.AcercaDe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AcercaDe" Height="300" Width="500" Loaded="Window_Loaded">
    <StackPanel>
        <StackPanel VerticalAlignment="Top">
            <MediaElement Name="video" Height="190" Stretch="Fill" MediaOpened="video_MediaOpened" MediaEnded="video_MediaEnded" />
        </StackPanel>
        <StackPanel>
            <Slider Name="sldVideo" ValueChanged="sldVideo_ValueChanged" MouseLeftButtonUp="sldVideo_MouseLeftButtonUp" 
                    Thumb.DragCompleted="sldVideo_DragCompleted" Thumb.DragStarted="sldVideo_DragStarted" />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="50" VerticalAlignment="Bottom" HorizontalAlignment="Center">
            <Button Name="btnPlay" Content="PLAY" Width="60" Height="30" Margin="0,0,6,0" Click="btnPlay_Click" />
            <Button Name="btnPause" Content="PAUSE" Width="60" Height="30" Margin="0,0,6,0" Click="btnPause_Click" />
            <Button Name="btnStop" Content="STOP" Width="60" Height="30" Click="btnStop_Click" />
        </StackPanel>
    </StackPanel>
</Window>
