<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="ButtonStyle" TargetType="{x:Type Button}">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Width" Value="75"/>
        <Setter Property="Margin" Value="0,0,5,0" />
    </Style>

    <Style x:Key="ButtonRosa" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Background" Value="#FB539B" />
    </Style>

    <Style x:Key="ButtonAzul" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Background" Value="#78A3FC" />
    </Style>

    <Style x:Key="ButtonVerde" TargetType="{x:Type Button}" BasedOn="{StaticResource ButtonStyle}">
        <Setter Property="Background" Value="#07F3C0" />
    </Style>
</ResourceDictionary>