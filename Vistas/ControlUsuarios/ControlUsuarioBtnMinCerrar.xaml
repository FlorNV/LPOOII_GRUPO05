<UserControl x:Class="Vistas.ControlUsuarioBtnMinCerrar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             xmlns:my="clr-namespace:Vistas"
             x:Name="UserControlTitleButtons">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="{Binding TitleText}"
                               Foreground="#fff"
                               FontSize="14"
                               FontFamily="Arial"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               Margin="10,0,0,0"/>
        <Button Name="btnMinimizar"
                            BorderThickness="0"
                            Foreground="#363636"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimizar_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#28AEED"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#278BEF"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="20" Height="20" CornerRadius="50"  Background="{TemplateBinding Background}">
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="/images/icons/dash.png" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button Name="btnCerrar"
                            BorderThickness="0"
                            Foreground="#363636"
                            Cursor="Hand"
                            Grid.Column="2"
                            Click="btnCerrar_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#DA34AE"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#C62DAE"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Width="25" Height="25" CornerRadius="50" Background="{TemplateBinding Background}">
                        <Image HorizontalAlignment="Center" VerticalAlignment="Center" Source="/images/icons/x.png" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</UserControl>
