<Window x:Class="Vistas.WinVendedores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
        Title="WinVendedores" Height="300" Width="600" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ObjectDataProvider ObjectType="{x:Type svc:TrabajarVendedores}"
                            MethodName="obtenerVendedores"
                            x:Key="get_vendedores"/>
    </Window.Resources>
    <Grid>
        <ListView Name="Vendedor" ItemsSource="{Binding Source={StaticResource get_vendedores}}" 
                  SelectionChanged="getLegajo_SelectionChanged" SelectionMode="Single">
            <ListView.View>
                <GridView ColumnHeaderContainerStyle="{StaticResource headerStyle}"
                          ColumnHeaderTemplate="{StaticResource headerTemplate}">
                    <GridViewColumn Width="150" Header="Legajo" DisplayMemberBinding="{Binding Path=Vend_Legajo}" />
                    <GridViewColumn Width="200" Header="Apellido" DisplayMemberBinding="{Binding Path=Vend_Apellido}" />
                    <GridViewColumn Width="200" Header="Nombre" DisplayMemberBinding="{Binding Path=Vend_Nombre}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
